<div id="splash-addons">
    <div class="inner">
        <h1>Resources</h1>
        <p>
            Resources allow you to enhance Komodo through addons, skins,
            color schemes, macro's, key bindings, etc.
            <a href="/resources">View All</a>
        </p>
        <br class="clearfix">

        <% for k,addon of @_.first(@db.addons().featured, 4): %>
        <div>
            <h2><%= addon.name %></h2>
            <figure style="background-image: url('/images/addons/<%= addon.img %>')"></figure>
            <p>
                <%- addon.description %>
            </p>
            <a href="<%= addon.link %>" class="button primary">Download</a>
        </div>
        <% end %>
    </div>
</div>
